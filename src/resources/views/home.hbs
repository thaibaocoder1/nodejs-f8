<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col col-lg-4 col-sm-6">
        <a href="/courses/{{this.slug}}">
          <div class="card" style="width: 18rem;">
            <a href="/courses/{{this.slug}}">
              <img
                src="{{this.thumbnail}}"
                class="card-img-top"
                alt="{{this.name}}"
              />
            </a>
            <div class="card-body">
              <a href="/courses/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Buy course</a>
            </div>
          </div>
        </a>
      </div>
    {{/each}}
  </div>
</div>