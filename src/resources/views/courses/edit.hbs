<div class="mt-4">
  <h3>Update Course</h3>
  <form method="post" action="/courses/update/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
        placeholder="Enter a course name"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="mb-3">
      <label for="level" class="form-label">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        placeholder="Enter a course level"
        name="level"
        value="{{course.level}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="videoID" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoID"
        placeholder="Enter a course videoID"
        name="videoID"
        value="{{course.videoID}}"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>